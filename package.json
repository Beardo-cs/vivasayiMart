{
  "name": "vivasayimart",
  "version": "1.0.0",
  "description": "MERN stack application for farmers marketplace",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build && cd .. && mkdir -p public && cp -r client/build/* public/"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "axios": "^1.13.4",
    "bcryptjs": "^3.0.3",
    "config": "^4.2.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.6",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
